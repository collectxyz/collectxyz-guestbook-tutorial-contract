{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EntriesResponse",
  "type": "object",
  "required": [
    "entries"
  ],
  "properties": {
    "entries": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Entry"
      }
    }
  },
  "definitions": {
    "Coordinates": {
      "type": "object",
      "required": [
        "x",
        "y",
        "z"
      ],
      "properties": {
        "x": {
          "type": "integer",
          "format": "int64"
        },
        "y": {
          "type": "integer",
          "format": "int64"
        },
        "z": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "Entry": {
      "type": "object",
      "required": [
        "author_xyz_id",
        "coordinates",
        "text"
      ],
      "properties": {
        "author_xyz_id": {
          "description": "The xyz token ID associated with this guestbook entry.",
          "type": "string"
        },
        "coordinates": {
          "description": "The coordinate location associated with this guestbook entry.",
          "allOf": [
            {
              "$ref": "#/definitions/Coordinates"
            }
          ]
        },
        "text": {
          "description": "The text content of the guestbook entry.",
          "type": "string"
        }
      }
    }
  }
}
